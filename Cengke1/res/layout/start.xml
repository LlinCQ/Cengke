<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical" >
    </FrameLayout>
<!--  FrameLayout 真布局控件用作页面切换效果更好-->
    <RadioGroup
        android:id="@+id/radiogroup_start"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radiobutton_homepage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rub_course_home_page_not_selected_bg"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="首页"
            android:textColor="#ABAAAD"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/radiobutton_sort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rub_course_category_not_selected_bg"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="分类"
            android:textColor="#ABAAAD"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/radiobutton_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rub_course_group_not_selected_bg"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="圈子"
            android:textColor="#ABAAAD"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/radiobutton_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rub_course_me_not_selected_bg"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="我"
            android:textColor="#ABAAAD"
            android:textSize="12sp" />
    </RadioGroup>

</LinearLayout>